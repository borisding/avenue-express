{
  "name": "avenue-express",
  "version": "1.0.0",
  "description": "Express MVC application starter for getting shit done.",
  "main": "index.js",
  "bin": "avenue.js",
  "scripts": {
    "clean": "rimraf public config/*.json",
    "config": "node build/scripts/config.js",
    "build": "npm-run-all clean config",
    "dev": "npm run build && cross-env NODE_ENV=development nodemon .",
    "start": "npm run build && cross-env NODE_ENV=production node .",
    "lint": "eslint . --fix",
    "test": "npm run lint && jest"
  },
  "keywords": [
    "express",
    "mvc",
    "starter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/borisding/avenue-express.git"
  },
  "author": "Boris Ding Poh Hing",
  "license": "MIT",
  "dependencies": {
    "colors": "^1.3.2",
    "compression": "^1.7.3",
    "consolidate": "^0.15.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "csurf": "^1.9.0",
    "dotenv": "^6.0.0",
    "dotenv-parse-variables": "^0.2.0",
    "esm": "^3.0.82",
    "express": "^4.16.3",
    "extend": "^3.0.2",
    "helmet": "^3.13.0",
    "hpp": "^0.2.2",
    "http-errors": "^1.7.1",
    "isdev": "^1.0.1",
    "make-promises-safe": "^1.1.0",
    "mkdirp-promise": "^5.0.1",
    "module-alias": "^2.1.0",
    "morgan": "^1.9.1",
    "mysql2": "^1.6.1",
    "nunjucks": "^3.1.3",
    "pluralize": "^7.0.0",
    "random-key": "^0.3.2",
    "rimraf": "^2.6.2",
    "sade": "^1.4.1",
    "sequelize": "^4.38.1",
    "serve-favicon": "^2.5.0",
    "slash": "^2.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "chokidar": "^2.0.4",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "jest": "^23.6.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "webpack": "^4.19.0",
    "webpack-cli": "^3.1.0"
  },
  "_moduleAliases": {
    "@root": ".",
    "@bin": "bin",
    "@config": "config",
    "@database": "database",
    "@logs": "logs",
    "@dist": "dist",
    "@src": "src",
    "@app": "src/app",
    "@controllers": "src/app/controllers",
    "@middlewares": "src/app/middlewares",
    "@models": "src/app/models",
    "@views": "src/app/views",
    "@assets": "src/assets",
    "@utils": "src/utils"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "testEnvironment": "node",
    "testRegex": ".*.spec\\.js$",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  }
}
